<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="CustTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxStrokeWidth">1px</item>
        <item name="boxStrokeColor">@color/textinput_state</item>

    </style>

    <style name="custom_bottom_text">
        <!--<item name="android:textSize">14dp</item>-->
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>





    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
    </style>

    <style name="switch.theme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorPrimary</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>

    <!---->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="CustomTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/app_input_text</item>
        <item name="android:textStyle">bold</item>


    </style>
    <style name="InputTextLayout" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/app_small_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:backgroundTint">@color/red</item>


    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!---->
    <!-- custom activity as dialog-->
    <style name="AppTheme.Popup">

        <!-- <item name="windowActionBar">true</item>

         <item name="windowNoTitle">true</item>-->

        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowCloseOnTouchOutside">true</item>

        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- Spinner color-->
    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/holo_darker_gray</item>
        <item name="colorControlActivated">#CCA52F</item>
    </style>
    <style name="BottomNavigationTheme">
        <item name="colorControlNormal">@color/black</item>
        <item name="android:tint">@color/greey</item>
        <item name="android:tintMode">@color/greey</item>

        <item name="colorControlActivated">@color/red</item>
    </style>
    <style name="navigationDrawerStyle">
        <!-- NavigationDrawer theme. -->
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>


    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/grey</item>
    </style>
</resources>
