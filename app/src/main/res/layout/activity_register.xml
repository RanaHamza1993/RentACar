<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:background="@color/white"
              tools:context=".activities.RegisterActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/signup_toolbar"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_width="match_parent"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:theme="@style/ThemeOverlay.AppCompat.Light"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/white">
        <LinearLayout
                android:id="@+id/secondry_linear"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:visibility="visible"
                    android:id="@+id/app_logo"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="center_vertical"
                    android:src="@drawable/toolbarlogo" />
            <TextView
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/activity_name"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Fragment Name"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_button_text"
            />


            <ImageView
                    android:id="@+id/add_cart_other"
                    android:layout_width="@dimen/_20sdp"
                    android:visibility="gone"
                    android:layout_height="@dimen/_20sdp"
                    android:tint="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:gravity="center_vertical"
                    android:src="@mipmap/add_cart" />
            <TextView
                    android:visibility="visible"
                    android:id="@+id/invite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:gravity="end|center_vertical"
                    android:textColor="@color/solid_black"
                    android:text="Invite"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textSize="@dimen/app_normal_text"
            />
        </LinearLayout>



    </androidx.appcompat.widget.Toolbar>

    <ScrollView

            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/signup_toolbar"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <!---->
            <!---->

            <!---->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/signup_root"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/crammargin20"
                    android:paddingRight="@dimen/crampadding20"
                    android:paddingBottom="@dimen/crampadding20">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="250dp"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/crammargin10"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/cramlogo" />
                </RelativeLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/crammargin30"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center"
                        android:text="Sign Up"
                        android:textColor="@color/black"
                        android:textSize="@dimen/input_text"
                        android:textStyle="bold" />
                <!---->
                <!--Email-->

                <!--Email-->

                <!--Username-->
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/crampadding5"
                        app:hintTextAppearance="@style/InputTextLayout">

                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_firstName"
                            style="@style/CustomTextAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                            android:hint="First Name*"
                            android:inputType="textCapWords"
                            android:maxLength="64"
                            android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/crampadding5"
                        app:hintTextAppearance="@style/InputTextLayout">

                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_lastName"
                            style="@style/CustomTextAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                            android:hint="Last Name*"
                            android:inputType="textCapWords"
                            android:maxLength="64"
                            android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_r_un"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/crampadding5"
                        app:hintTextAppearance="@style/InputTextLayout">

                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_userName"
                            style="@style/CustomTextAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_-."
                            android:hint="Username*"
                            android:maxLength="64"
                            android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_r_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/crampadding5"
                        app:hintTextAppearance="@style/InputTextLayout">

                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_mail"
                            style="@style/CustomTextAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Email*"
                            android:inputType="textEmailAddress"
                            android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
                <!--Username-->
                <!-- <android.support.design.widget.TextInputLayout
                     android:id="@+id/input_layout_r_company"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:padding="5dp" />

                 <android.support.v7.widget.AppCompatEditText
                     android:id="@+id/et_companyName"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:hint="Enter School Name"
                     android:singleLine="true" />-->
                <!--Password-->
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_r_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/crampadding5"
                        app:hintTextAppearance="@style/InputTextLayout"
                        app:passwordToggleEnabled="true">

                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_password"
                            style="@style/CustomTextAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password*"
                            android:inputType="textPassword"
                            android:maxLength="32"
                            android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--End Password-->
                <!--Confirm Password-->
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_c_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/crammargin5"
                        app:hintTextAppearance="@style/InputTextLayout"
                        app:passwordToggleEnabled="true">

                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_confirmPassword"
                            style="@style/CustomTextAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Confirm Password*"
                            android:inputType="textPassword"
                            android:maxLength="32"
                            android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
                <!--Confirm Password-->
                <!--<CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Not a Student" />-->
                <!--LoginButton-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                    <Switch
                            android:id="@+id/terms_and_privacy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:padding="@dimen/text_padding_how_it"
                            android:theme="@style/switch.theme" />


                    <TextView
                            android:id="@+id/privcy_terms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="I have read and agree to the "
                            android:textSize="@dimen/app_mini_text" />

                </LinearLayout>

                <TextView
                        android:id="@+id/b_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/crammargin10"
                        android:background="@drawable/bid_buy_btns_home"
                        android:fontFamily="@font/opensans_bold"
                        android:padding="@dimen/crampadding5"
                        android:text="Sign Up"
                        android:gravity="center"
                        android:elevation="@dimen/button_elevation"
                        android:textAllCaps="false"
                        android:textColor="@drawable/bidbuybtntextstate"
                        android:textSize="@dimen/button_text"
                        android:textStyle="bold" />

                <TextView

                        android:id="@+id/already_member"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Already have an Account? Sign In"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/app_normal_text" />
                <!--EndLoginButton-->
            </LinearLayout>

            <!---->
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
