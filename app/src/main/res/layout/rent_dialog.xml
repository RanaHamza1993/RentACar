<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="@dimen/dialog_width"
                                   android:layout_height="wrap_content"
                                   android:layout_marginBottom="@dimen/button_margin_addpost"
                                   app:cardBackgroundColor="@color/white"
                                   app:cardCornerRadius="@dimen/button_margin_addpost"
                                   app:cardElevation="4dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="?attr/actionBarSize">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/app_heading_text"
                    android:text="Rent It"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"/>
        </RelativeLayout>
        <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_padding_how_it"
                android:text="Select number of days you want to rent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                android:gravity="left"
                android:textSize="@dimen/tv_heading3_fontsize"
                android:textStyle="bold"
        />


        <Spinner
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:id="@+id/rent_days_spinner"
                android:layout_width="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:spinnerMode="dropdown" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_padding_how_it"
                android:text="By placing an Offer, you're commiting to rent this item."
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/black"
                android:gravity="left"
                android:textSize="@dimen/tv_heading3_fontsize"
                android:textStyle="bold"
        />
        <Button
                android:id="@+id/rent_it"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bid_buy_btns_home"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@drawable/bidbuybtntextstate"
                android:textSize="@dimen/app_button_text"
                android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
